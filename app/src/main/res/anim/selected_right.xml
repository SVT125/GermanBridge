<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="sequentially">
    <objectAnimator
        android:propertyName="x"
        android:valueFrom="0"
        android:valueTo="300"
        android:valueType="floatType"
        />
    <objectAnimator
        android:propertyName="x"
        android:valueFrom="300"
        android:valueTo="200"

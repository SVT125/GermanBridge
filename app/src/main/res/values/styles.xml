<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>

        <item name="android:background">@color/background</item>

        <item name="android:textAlignment">center</item>

        <item name="android:textColorPrimary">@color/hearts_red</item>

        <item name="android:textColor">@color/hearts_red</item>

        <item name="android:textAppearanceButton">@color/hearts_red</item>
    </style>
    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Dialog">

        <!-- <item name=" background">@color/background</item> -->

        <item name="android:windowBackground">@color/background</item>

        <item name="android:textColor">@color/spades_blue</item>

        <item name="android:textAlignment">center</item>

        <item name="android:textStyle">italic</item>
    </style>
    <style name="pauseScreen" parent="@style/Theme.AppCompat.Dialog.MinWidth">

        <item name="android:windowBackground">@color/background</item>

        <item name="android:background">@color/background</item>

        <item name="android:textAlignment">center</item>

        <item name="android:textColorPrimary">@color/hearts_red</item>

        <item name="android:textColor">@color/hearts_red</item>

        <!-- <item name=" colorAccent">@color/hearts_red</item>
        <item name=" textAppearanceButton">@color/hearts_red</item> -->
    </style>
    <style name="settings" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/background</item>

        <item name="android:background">@color/background</item>

        <item name="android:textAlignment">center</item>

        <item name="android:textColorPrimary">@color/hearts_red</item>

        <item name="android:textColor">@color/hearts_red</item>
    </style>
    <style name="BidCustom" parent="@style/Theme.AppCompat.Dialog">

        <item name="android:background">@color/background</item>

        <item name="android:windowBackground">@color/hearts_red</item>

        <item name="android:textColor">@color/spades_blue</item>

        <item name="android:textAlignment">center</item>
    </style>

</resources>
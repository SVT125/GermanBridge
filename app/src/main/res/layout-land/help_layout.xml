<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/help_layout">
    <!-- activity_screen_slide.xml -->
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageButton"
        android:background="@color/background"/>

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/imageButton"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:onClick="bridgeHelp"
        android:src="@drawable/bridge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/background" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:onClick="heartsHelp"
        android:src="@drawable/heart"
        android:scaleType="centerInside"
        android:background="@drawable/help_border_unselected" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:background="@drawable/help_border_unselected"
        android:onClick="spadesHelp"
        android:scaleType="centerInside"
        android:src="@drawable/spades" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Return to Main Menu"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pager"
        android:layout_toEndOf="@+id/imageButton3"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="helpToMenu"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>

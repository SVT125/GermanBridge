<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/help_layout">
    <!-- activity_screen_slide.xml -->
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/helpBridge"
        android:background="@color/background"/>

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/helpBridge"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:onClick="bridgeHelp"
        android:src="@drawable/bridge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/help_button_background" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/helpHearts"
        android:layout_below="@+id/helpBridge"
        android:layout_alignParentStart="true"
        android:onClick="heartsHelp"
        android:src="@drawable/heart"
        android:scaleType="centerInside"
        android:background="@drawable/help_border_unselected" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:id="@+id/helpSpades"
        android:layout_below="@+id/helpHearts"
        android:layout_alignParentStart="true"
        android:background="@drawable/help_border_unselected"
        android:onClick="spadesHelp"
        android:scaleType="centerInside"
        android:src="@drawable/spades" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/help_layout">
    <!-- activity_screen_slide.xml -->
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="119dp"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:onClick="bridgeHelp"
        android:src="@drawable/bridge"
        android:background="@drawable/help_border" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="119dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:onClick="heartsHelp"
        android:src="@drawable/heart"
        android:scaleType="centerInside"
        android:background="@drawable/help_border_unselected" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="119dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:background="@drawable/help_border_unselected"
        android:onClick="spadesHelp"
        android:scaleType="centerInside"
        android:src="@drawable/spades" />

</RelativeLayout>

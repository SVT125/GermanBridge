<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpadesActivity"
    android:id="@+id/gameLayout"
    android:screenOrientation="landscape"
    android:configChanges="orientation|keyboardHidden"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@drawable/test_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/leftPlayerLayout"
        android:layout_weight="0.41"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".175"
            android:id="@+id/leftPlayerHandLayout"
            android:gravity="center_vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.example.james.cardsuite.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/leftScore"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="12dp"
                android:typeface="serif"
                android:layout_gravity="center"
                android:elegantTextHeight="false"
                android:elevation="1dp"
                android:background="@drawable/small_button_background"
                android:textIsSelectable="false"
                android:layout_marginLeft="-50dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/centerLayout"
        android:layout_weight="0.18"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topPlayerLayout"
            android:layout_weight="0.375"
            android:clipChildren="false"
            android:clipToPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:id="@+id/topPlayerHandLayout"
                android:gravity="center_vertical|center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginTop="-40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:id="@+id/topScore"
                    android:textSize="12dp"
                    android:typeface="serif"
                    android:elevation="1dp"
                    android:layout_gravity="center"
                    android:autoText="false"
                    android:background="@drawable/small_button_background"
                    android:visibility="visible"
                    android:layout_marginTop="-35dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/potLayout"
            android:layout_weight="0.25"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftPotCard"
                android:layout_marginRight="16dp"
                android:rotation="90"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/anchor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topPotCard"
                android:layout_marginBottom="8dp"
                android:rotation="180"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_above="@id/anchor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightPotCard"
                android:layout_marginLeft="16dp"
                android:rotation="270"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/anchor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottomPotCard"
                android:layout_marginTop="8dp"
                android:maxHeight="115dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/anchor"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomPlayerLayout"
            android:layout_weight="0.375"
            android:clipChildren="false"
            android:clipToPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:id="@+id/bottomPlayerHandLayout"
                android:gravity="center_vertical|center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginBottom="-40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:id="@+id/bottomScore"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:typeface="serif"
                    android:layout_gravity="center"
                    android:elevation="1dp"
                    android:background="@drawable/small_button_background"
                    android:layout_marginBottom="75dp"
                    android:layout_marginLeft="180dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rightPlayerLayout"
        android:layout_weight="0.41"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/optionsLayout"
            android:layout_weight=".925"
            android:gravity="center_vertical|right"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pause"
                android:textSize="10dp"
                android:onClick="menuClick" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".075"
            android:id="@+id/rightPlayerHandLayout"
            android:gravity="center_vertical|center_horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.example.james.cardsuite.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/rightScore"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:gravity="bottom"
                android:typeface="serif"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:background="@drawable/small_button_background"
                android:layout_marginRight="-45dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
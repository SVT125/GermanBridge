<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center"
    android:id="@+id/mainLayout"
    android:screenOrientation="landscape"
    android:configChanges="orientation|keyboardHidden"
    android:background="@drawable/test_background">

    <TextView android:text="@string/welcome_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greetingView"
        android:textSize="26dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/german_bridge_title"
        android:id="@+id/german_button"
        android:onClick="gameClick"
        android:background="@drawable/button_background"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:textStyle="bold"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hearts_title"
        android:id="@+id/hearts_button"
        android:onClick="gameClick"
        android:background="@drawable/button_background"
        android:layout_alignTop="@+id/german_button"
        android:layout_toStartOf="@+id/greetingView"
        android:textStyle="bold"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spades_title"
        android:id="@+id/spades_button"
        android:onClick="gameClick"
        android:background="@drawable/button_background"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/german_button"
        android:layout_toEndOf="@+id/greetingView"
        android:textStyle="bold"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settings_button"
        android:onClick="settingsClick"
        android:background="@drawable/button_background"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/overlay_layout">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/german_button"
        android:layout_alignParentStart="true"
        android:src="@drawable/bridge"
        android:scaleType="centerCrop"
        android:onClick="gameClick" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/hearts_button"
        android:layout_below="@+id/german_button"
        android:layout_toEndOf="@+id/german_button"
        android:src="@drawable/heart"
        android:scaleType="centerCrop"
        android:onClick="gameClick" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/spades_button"
        android:layout_below="@+id/hearts_button"
        android:layout_toEndOf="@+id/hearts_button"
        android:layout_marginStart="52dp"
        android:src="@drawable/spades"
        android:scaleType="centerCrop"
        android:onClick="gameClick" />
</RelativeLayout>

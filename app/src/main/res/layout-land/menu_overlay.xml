<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/overlay_layout"
    android:gravity="center_vertical|center_horizontal">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/german_button"
        android:layout_alignParentStart="true"
        android:src="@drawable/bridge"
        android:scaleType="centerCrop"
        android:onClick="gameClick"
        android:layout_gravity="center"
        android:layout_marginRight="50dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/hearts_button"
        android:layout_below="@+id/german_button"
        android:layout_toEndOf="@+id/german_button"
        android:src="@drawable/heart"
        android:scaleType="centerCrop"
        android:onClick="gameClick"
        android:layout_gravity="center"
        android:layout_marginRight="50dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/spades_button"
        android:layout_below="@+id/hearts_button"
        android:layout_toEndOf="@+id/hearts_button"
        android:src="@drawable/spades"
        android:scaleType="centerCrop"
        android:onClick="gameClick"
        android:layout_gravity="center" />
</LinearLayout>
